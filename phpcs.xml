<?xml version="1.0"?>
<ruleset name="Slim Coding Standards">
    <description>Slim PHP_CodeSniffer ruleset</description>
    <file>config</file>
    <file>cron</file>
    <file>public</file>
    <file>src</file>

    <!-- Show progress, show the error codes for each message (source). -->
    <arg value="ps" />

    <!-- Ignore vendor files -->
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Our base rule: set to PSR12-->
    <rule ref="PSR12"/>
</ruleset>
